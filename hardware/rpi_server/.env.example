# === デバイス情報 ===
DEVICE_HUB_ID="DH001"
DEVICE_NAME="RaspberryPi Device Hub 1"

# === Cloud Run API設定 ===
# 注意: 実際の値は .env ファイルに記載し、Gitにコミットしないでください
# 本番環境のCloud Run URLを設定してください
CLOUD_RUN_API_URL="https://your-backend-api-XXXXXXXXXX.asia-northeast1.run.app"
CLOUD_RUN_WS_URL="wss://your-backend-api-XXXXXXXXXX.asia-northeast1.run.app"

# === MQTT Broker設定 ===
MQTT_BROKER_HOST="localhost"
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID="rpi_server"
MQTT_KEEPALIVE=60

# === Flask Server設定 ===
FLASK_HOST="0.0.0.0"
FLASK_PORT=8000
FLASK_DEBUG=False

# === Timeline処理設定 ===
# SYNC_TOLERANCE_MS: イベント実行の時間許容範囲（ミリ秒）
# 例: 100ms の場合、1.0秒のイベントは 0.9~1.1秒の範囲で実行されます
# デフォルト: 100ms (±0.1秒)
SYNC_TOLERANCE_MS=100
TIMELINE_CACHE_DIR="data/timeline_cache"
COMMUNICATION_LOG_DIR="data/communication_logs"

# === エフェクトクールダウン設定（秒） ===
# 各エフェクトの最小実行間隔を設定（0.0で無効化）
WATER_COOLDOWN_SEC=3.0
WIND_COOLDOWN_SEC=0.0
VIBRATION_COOLDOWN_SEC=0.0
COLOR_COOLDOWN_SEC=0.0

# === ログ設定 ===
LOG_LEVEL="INFO"
LOG_FILE="data/rpi_server.log"
ENABLE_COMMUNICATION_LOG=True

# === デバイスハートビート設定 ===
HEARTBEAT_INTERVAL=5
HEARTBEAT_TIMEOUT=15

# === WebSocket再接続設定 ===
WS_RECONNECT_DELAY=5
WS_MAX_RECONNECT_ATTEMPTS=0
WS_PING_INTERVAL=30
