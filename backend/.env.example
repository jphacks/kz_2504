# 4DX@HOME Backend 環境変数テンプレート
# このファイルをコピーして .env として使用してください

# アプリケーション設定
APP_NAME="4DX@HOME Backend API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development / production
DEBUG="true"  # true / false

# サーバー設定
HOST="0.0.0.0"
PORT="8000"

# ログレベル
LOG_LEVEL="INFO"  # DEBUG / INFO / WARNING / ERROR
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# CORS設定（カンマ区切り）
# 本番環境では実際のフロントエンドURLのみを指定
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173"

# データディレクトリ
DATA_DIR="./data"
VIDEO_DIR="./assets/videos"
THUMBNAIL_DIR="./assets/thumbnails"
SYNC_DATA_DIR="./assets/data"

# WebSocket設定
WS_HEARTBEAT_INTERVAL="30"
WS_MESSAGE_MAX_SIZE="10485760"

# Cloud設定（本番環境）
# 注意: 実際の値は .env ファイルに記載し、Gitにコミットしないでください
CLOUD_PROJECT_ID="your-project-id"
CLOUD_RUN_SERVICE_NAME="4dx-home-backend-api"
CLOUD_REGION="asia-northeast1"

# Backend API URL (Cloud Run)
# 開発環境: http://localhost:8000
# 本番環境: https://fdx-home-backend-api-XXXXXXXXXX.asia-northeast1.run.app
BACKEND_API_URL="http://localhost:8000"

# WebSocket URL
# 開発環境: ws://localhost:8000
# 本番環境: wss://fdx-home-backend-api-XXXXXXXXXX.asia-northeast1.run.app
BACKEND_WS_URL="ws://localhost:8000"
